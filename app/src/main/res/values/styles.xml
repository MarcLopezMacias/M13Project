<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="fontFamily">@font/montserrat_regular</item>

    </style>

    <!-- TEXT OR LAYOUT STYLES, ACCORDING TO INTERFACE ELEMENT -->

    <style name="normalSizeText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="smallerText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="lilText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="biggestText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="bigText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="warning" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="materialTextInputLayout">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="editText">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="productName" parent="normalSizeText">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="productDescription" parent="normalSizeText">
        <item name="android:textStyle">normal</item>
    </style>

    <!-- CUSTOM BUTTONS -->

    <style name="TextButton" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="smallerTextButton" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="smolTextButton" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>

        <item name="borderWidth">69dp</item>
        <item name="android:borderlessButtonStyle">@color/colorPrimary</item>
    </style>

    <style name="Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BottomAppBarButton" parent="Borderless">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="color">@color/colorPrimary</item>
    </style>

    <!-- ALIGNMENT STYLES -->

    <style name="center" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- OPTIONS MENU -->
    <style name="OptionsMenu">
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="itemBackground">@color/backgroundColor</item>

    </style>

    <style name="NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemTextAppearance">@style/TextAppearance.Custom.Navigation.Producto</item>
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="itemBackground">@color/backgroundColor</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="color">@color/backgroundColor</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>

    </style>

    <style name="TextAppearance.Custom.Navigation.Producto" parent="normalSizeText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>