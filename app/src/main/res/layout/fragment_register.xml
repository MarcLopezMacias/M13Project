<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"

            android:id="@+id/registerTextView"

            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameTextView"
            android:layout_marginTop="20dp"
            android:layout_below="@id/registerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/registerTextView"
                android:layout_height="wrap_content"
                android:id="@+id/usernameEditText"
                android:hint="@string/username"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordTextView"
            android:layout_width="match_parent"
            android:layout_below="@+id/usernameTextView"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/passwordEditText"
                android:hint="@string/password"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/repeatPasswordTextView"
            android:layout_width="match_parent"
            android:layout_below="@+id/passwordTextView"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/repeatPasswordEditText"
                android:hint="@string/repeat_password"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_below="@+id/repeatPasswordTextView"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/emailEditText"
                android:hint="@string/e_mail"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameTextView"
            android:layout_below="@+id/emailTextView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/nameEditText"
                android:hint="@string/name"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/surnamesTextView"
            android:layout_below="@+id/nameTextView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/surnamesEditText"
                android:hint="@string/surnames"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/show_selected_date"
            android:layout_width="wrap_content"
            android:layout_below="@id/surnamesEditText"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="128dp"
            android:text="Selected Date is : "
            android:textSize="18sp"
            tools:ignore="NotSibling" />

        <!--button to open the material design date picker dialog-->
        <Button
            android:id="@+id/pick_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Select Date"
            android:textSize="18sp"
            app:icon="@drawable/calendar_foreground" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/genderPronounTextView"
            android:layout_width="match_parent"
            android:layout_below="@+id/pick_date_button"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                style="@style/spinnerTheme"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/genderPronounSpinner"
                android:hint="@string/gender_pronoun"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="match_parent"
            android:id="@+id/termsCheckBox"
            android:text="@string/accept_terms_conditions"
            android:layout_below="@+id/genderPronounTextView"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/termsCheckBox"
            android:id="@+id/registerButton"
            android:textColor="@color/white"
            android:text="@string/register"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/registerButton"
            android:text="@string/login"
            android:textColor="@color/white"
            android:id="@+id/loginButton"
            android:layout_marginBottom="30dp"
            />

    </RelativeLayout>


</ScrollView>