<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <View
        android:id="@+id/topSeparator"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/offersButton"
        style="@style/BottomAppBarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ofertas"
        app:icon="@drawable/ic_baseline_local_offer_24"
        app:layout_constraintEnd_toStartOf="@+id/outletButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topSeparator" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/outletButton"
        style="@style/BottomAppBarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/outlet"
        app:icon="@drawable/ic_baseline_calendar_today_24"
        app:layout_constraintEnd_toStartOf="@+id/destacadosButton"
        app:layout_constraintStart_toEndOf="@+id/offersButton"
        app:layout_constraintTop_toBottomOf="@+id/topSeparator" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/destacadosButton"
        style="@style/BottomAppBarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destacados"
        app:icon="@drawable/ic_baseline_new_releases_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/outletButton"
        app:layout_constraintTop_toBottomOf="@+id/topSeparator" />

    <View
        android:id="@+id/bottomSeparator"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outletButton" />

</androidx.constraintlayout.widget.ConstraintLayout>